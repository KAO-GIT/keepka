    Ключ = "h24"
    КнопкиСтр2.Добавить(новый КнопкаКоманда(text = Вар[Ключ], callback_data = Ключ))

    Клавиатура.Вставить("inline_keyboard", [КнопкиСтр1, КнопкиСтр2])

