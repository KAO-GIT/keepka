@ВПроекте
метод ПолучитьТокен(): Строка
    исп Результат = Запрос{
        ВЫБРАТЬ
            Токен КАК Токен
        ИЗ
            СправочникНастройки
        ГДЕ
            Код == 1
    }.Выполнить()

    знч Токен = Результат.ПервыйИлиУмолчание().Токен

    Результат.Закрыть()

    возврат Токен
;


