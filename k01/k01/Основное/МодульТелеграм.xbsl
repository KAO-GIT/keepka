    Ключ = "m30"
    КнопкиСтр1.Добавить(новый КнопкаКоманда(text = Вар[Ключ], callback_data = Ключ))

    пер КнопкиСтр2 = новый Массив<КнопкаКоманда>()
    Ключ = "h1"
    КнопкиСтр2.Добавить(новый КнопкаКоманда(text = Вар[Ключ], callback_data = Ключ))
    Ключ = "h2"
    КнопкиСтр2.Добавить(новый КнопкаКоманда(text = Вар[Ключ], callback_data = Ключ))
    Ключ = "h3"
